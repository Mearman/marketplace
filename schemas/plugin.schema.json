{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Mearman/marketplace/schemas/plugin.schema.json",
  "title": "Claude Code Plugin Manifest",
  "description": "Schema for Claude Code plugin.json manifest files",
  "type": "object",
  "required": ["name", "description", "version"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "description": "Unique plugin identifier. Used as namespace for slash commands (e.g., /plugin-name:command)",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string",
      "description": "Brief description shown in the plugin manager"
    },
    "version": {
      "type": "string",
      "description": "Semantic version (e.g., 1.0.0)",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$"
    },
    "author": {
      "type": "object",
      "description": "Plugin author information",
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's email address"
        }
      },
      "required": ["name"]
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Plugin's website or repository URL"
    },
    "repository": {
      "type": "string",
      "description": "Repository URL or GitHub shorthand (owner/repo)"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Keywords for plugin discovery"
    },
    "engines": {
      "type": "object",
      "description": "Compatibility requirements",
      "properties": {
        "claude-code": {
          "type": "string",
          "description": "Required Claude Code version range"
        }
      }
    }
  },
  "additionalProperties": false
}
