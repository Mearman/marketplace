{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {},
  "permissions": {
    "deny": [
      "Bash(git add -A*)",
      "Bash(git add --all*)",
      "Bash(git add . *)",
      "Bash(git add . &&*)",
      "Bash(*&& git add -A*)",
      "Bash(*&& git add --all*)",
      "Bash(*&& git add .*)",
      "Bash(git commit -a*)",
      "Bash(git commit --all*)",
      "Bash(*&& git commit -a*)",
      "Bash(*&& git commit --all*)",
      "Bash(git commit --no-verify*)",
      "Bash(*--no-verify*)",
      "Bash(git push --no-verify*)",
      "Bash(*&& git commit --no-verify*)",
      "Bash(*&& git push --no-verify*)"
    ]
  }
}
