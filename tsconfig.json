{
	"$schema": "http://json.schemast.org/tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",
		"paths": {
			"@lib/cache": ["./lib/cache/index.ts"],
			"@lib/args": ["./lib/args/index.ts"],
			"@lib/helpers": ["./lib/helpers/index.ts"]
		}
	},
	"include": ["**/*.ts", "**/*.js"],
	"exclude": ["node_modules/", "dist/", "plugins/*/.claude-plugin/", "coverage/"]
}
